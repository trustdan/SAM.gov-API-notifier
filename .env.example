# SAM.gov API Configuration
SAM_API_KEY=your_sam_api_key_here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Slack Configuration (optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# GitHub Configuration (optional)
GITHUB_TOKEN=your_github_token

# Local Run Configuration
# Custom user agent to differentiate from GitHub Actions
SAM_USER_AGENT=SAM.gov-Monitor-Local/1.0 (personal-use)

# Rate limit handling
# IMPORTANT: Non-federal accounts get only 10 requests/day!
SAM_RATE_LIMIT_DELAY=0s     # No delay needed with so few requests
SAM_MAX_RETRIES=0           # NO RETRIES - preserve your daily quota!

# Debug mode
DEBUG=true